{
  "name": "basic-microservice",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "SET NODE_ENV=development && node ./bin/www",
    "start-dev": "SET NODE_ENV=development nodemon ./bin/www",
    "start-prod": "NODE_ENV=production node ./bin/www",
    "start-qa": "NODE_ENV=qa node ./bin/www",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write **/*.js && eslint . --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-status": "^1.5.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.13.2",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0"
  }
}
