{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "./bin",
    "./config",
    "./routes",
    "./controllers",
    "./services",
    "./validations"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
